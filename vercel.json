{
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.php": { "runtime": "vercel-php@latest" }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "public": true,
  "buildCommand": "php artisan vercel:build",
  "installCommand": "composer install --no-dev && npm install && npm run build",
  "outputDirectory": "public",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  }
}
